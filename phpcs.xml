<?xml version="1.0"?>
<ruleset name="FlagKit PHP SDK">
    <description>FlagKit PHP SDK coding standards</description>

    <!-- Use PSR-12 as base -->
    <rule ref="PSR12">
        <!-- Allow multiple classes/enums per file for grouping related types -->
        <exclude name="PSR1.Classes.ClassDeclaration.MultipleClasses"/>
    </rule>

    <!-- Allow longer lines (140 characters) -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="140"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>

    <!-- Scan these directories -->
    <file>src</file>
    <file>tests</file>

    <!-- Show progress and colors -->
    <arg value="sp"/>
    <arg name="colors"/>
</ruleset>
